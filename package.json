{
  "name": "pdx-json-editor",
  "version": "1.0.0",
  "description": "A lightweight JSON editor with Monaco Editor",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test --config=playwright.config.cjs",
    "test:e2e:ui": "playwright test --config=playwright.config.cjs --ui",
    "test:performance": "jest src/performance.test.js",
    "test:performance:browser": "node performance.js",
    "test:all": "node run-tests.js",
    "deploy": "node deploy-gh-pages.js",
    "lint": "eslint src --ext js,jsx",
    "format": "prettier --write \"src/**/*.{js,jsx,css,scss}\""
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@monaco-editor/react": "^4.5.1",
    "@mui/icons-material": "^5.11.16",
    "@mui/material": "^5.13.0",
    "file-saver": "^2.0.5",
    "jsonc-parser": "^3.2.0",
    "monaco-editor": "^0.38.0",
    "preact": "^10.13.2"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-react": "^7.18.6",
    "@playwright/test": "^1.33.0",
    "@preact/preset-vite": "^2.5.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/preact": "^3.2.3",
    "@testing-library/preact-hooks": "^1.1.0",
    "@types/jest": "^29.5.1",
    "eslint": "^8.40.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-plugin-jest": "^27.2.1",
    "gh-pages": "^6.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^2.8.8",
    "terser": "^5.43.1",
    "vite": "^4.3.5"
  }
}