# EditorConfig is awesome: https://EditorConfig.org

# 顶级EditorConfig文件
root = true

# 所有文件
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown文件
[*.md]
trim_trailing_whitespace = false

# 配置文件
[{package.json,*.yml,*.yaml}]
indent_style = space
indent_size = 2